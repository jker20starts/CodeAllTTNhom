@model coderush.Areas.TTNhom_QLThuVien.Models.MuonTraSach

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <b>
                QUẢN LÝ THƯ VIỆN
                <small>Học viện Kỹ thuật Quân sự</small>
            </b>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data tables</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <i class="fa fa-hand-o-right"></i>
                        <h3 class="box-title">QUẢN LÝ MƯỢN-TRẢ&nbsp;&nbsp;</h3>
                        <i class="fa fa-angle-double-right"></i>
                        <h3 class="box-title">Chỉnh sửa thông tin Mượn-Trả</h3>
                        <button type="button" class="btn btn-warning" style="float:right">
                            <a class="fa fa-th-list"></a> &nbsp;
                            @Html.ActionLink("Danh sách", "Index")
                        </button>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="box-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Mã mượn trả</label>
                                <input type="text" class="form-control" name="MaMuonTra" placeholder="Nhập mã mượn trả" value=" @Html.DisplayFor(model => model.MaMuonTra)">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Mã số thẻ</label><br />
                                @Html.DropDownList("MaSoThe", (IEnumerable<SelectListItem>)ViewBag.CardList, "-- Mã số thẻ --", new { @class = "combobox" })
                                <br />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Sách mượn</label><br />
                                <input type="text" class="form-control" name="MaSach" placeholder="Nhập mã sách" value=" @Html.DisplayFor(model => model.MaSach)">
                                @Html.DropDownList("MaSach", (IEnumerable<SelectListItem>)ViewBag.BookList, "-- Sách mượn --", new { @class = "combobox" })
                                <br />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Ngày mượn sách</label><br />
                                <input type="text" class="form-control" name="NgayMuonSach" placeholder="Nhập ngày mượn sách" value=" @Html.Raw(Model.NgayMuonSach.Value.ToShortDateString())">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Hạn trả sách</label><br />
                                <input type="text" class="form-control" name="HanTraSach" placeholder="Nhập hạn trả sách" value=" @Html.Raw(Model.HanTraSach.Value.ToShortDateString())">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Tình trạng khi mượn</label><br />
                                <input type="text" class="form-control" name="TinhTrangKhiMuon" placeholder="Nhập tình trạng khi mượn" value=" @Html.DisplayFor(model => model.TinhTrangKhiMuon)">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Đã trả</label><br />
                                <input type="text" class="form-control" name="DaTra" placeholder="Đã trả hay chưa" value=" @Html.Raw(Model.DaTra.Value)">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Ngày trả sách</label><br />
                                <input type="text" class="form-control" name="NgayTraSach" placeholder="Nhập ngày trả sách" value="@if (Model.DaTra == true) { @Html.Raw(Model.NgayTraSach.Value.ToShortDateString())} else { @Html.Raw("")} ">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail1">Tình trạng khi trả</label><br />
                                <input type="text" class="form-control" name="TinhTrangKhiTra" placeholder="Nhập tình trạng khi trả" value="@if (Model.DaTra == true) { @Html.DisplayFor(model=>model.TinhTrangKhiTra)} else { @Html.Raw("")} ">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Ghi chú</label><br />
                                <input type="text" class="form-control" name="GhiChu" placeholder="Nhập ghi chú" value=" @Html.DisplayFor(model => model.GhiChu)">
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary"><a class="fa fa-save"></a> &nbsp;Lưu lại</button>
                        </div>
                    }
                </div>

            </div>
            <!--/.col -->

        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->



@section Styles{
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Content/adminlte/components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/adminlte/components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Content/adminlte/components/Ionicons/css/ionicons.min.css">
