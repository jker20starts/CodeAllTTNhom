@model coderush.Areas.TTNhom_QLThuVien.Models.Sach

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <b>
                QUẢN LÝ THƯ VIỆN
                <small>Học viện Kỹ thuật Quân sự</small>
            </b>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data tables</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <i class="fa fa-hand-o-right"></i>
                        <h3 class="box-title">QUẢN LÝ SÁCH&nbsp;&nbsp;</h3>
                        <i class="fa fa-angle-double-right"></i>
                        <h3 class="box-title">Thêm Sách</h3>
                        <button type="button" class="btn btn-warning" style="float:right">
                            <a class="fa fa-th-list"></a> &nbsp;
                            @Html.ActionLink("Danh sách", "Index")
                        </button>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("Create", "Book", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="box-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Mã sách</label>
                                <input type="text" class="form-control" name="MaSach" placeholder="Nhập mã sách" value=" @Html.DisplayFor(model => model.MaSach)">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Tên sách</label>
                                <input type="text" class="form-control" name="TenSach" placeholder="Nhập tên sách" value=" @Html.DisplayFor(model => model.TenSach)">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Tác giả</label><br />
                                @Html.DropDownList("MaTacGia", (IEnumerable<SelectListItem>)ViewBag.AuthorList, "-- Tên tác giả --", new { @class = "combobox" })
                                <div class="note">Tác giả cần được cập nhật trước khi lựa chọn</div>
                                <button type="button" class="btn btn-warning btn-add" style="float:left">
                                    <i class="fa fa-plus-square"></i> &nbsp;
                                    @Html.ActionLink("Thêm Tác giả", "AddAuthor", "Book")
                                </button>
                                <br />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Thể loại</label><br />
                                @Html.DropDownList("MaTheLoai", (IEnumerable<SelectListItem>)ViewBag.CategoryList, "-- Tên thể loại --", new { @class = "combobox" })
                                <div class="note">Thể loại cần được cập nhật trước khi lựa chọn</div>
                                <button type="button" class="btn btn-warning btn-add" style="float:left">
                                    <i class="fa fa-plus-square"></i> &nbsp;
                                    @Html.ActionLink("Thêm Thể loại", "AddCategory", "Book")
                                </button>
                                <br />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Nhà xuất bản</label><br />
                                @Html.DropDownList("MaNXB", (IEnumerable<SelectListItem>)ViewBag.PublishList, "-- Tên nhà xuất bản --", new { @class = "combobox" })
                                <div class="note">Nhà xuất bản cần được cập nhật trước khi lựa chọn</div>
                                <button type="button" class="btn btn-warning btn-add" style="float:left">
                                    <i class="fa fa-plus-square"></i> &nbsp;
                                    @Html.ActionLink("Thêm NXB", "AddPublishingCompany", "Book")
                                </button>
                                <br />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Năm xuất bản</label>
                                <input type="text" class="form-control" name="NamXuatBan" placeholder="Năm xuất bản" value=" @Html.DisplayFor(model => model.NamXuatBan)">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Tình trạng</label>
                                <input type="text" class="form-control" name="TinhTrang" placeholder="Tình trạng" value=" @Html.DisplayFor(model => model.TinhTrang)">
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary"><a class="fa fa-plus-square"></a> &nbsp;Tạo mới</button>
                        </div>
                    }


                </div>

            </div>
            <!--/.col -->

        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->



@section Styles{
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Content/adminlte/components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/adminlte/components/font-awesome/css/font-awesome.min.css">
