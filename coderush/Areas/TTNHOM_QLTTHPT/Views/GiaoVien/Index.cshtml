@model IEnumerable<coderush.Areas.TTNHOM_QLTTHPT.Models.Model.GIAOVIEN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}


<style>
    #example1_length {
        /*position: relative;
        bottom: 10px;*/
    }

    .col-sm-6 {
        width: unset;
    }

    label {
        margin-bottom: 13px;
    }

    a {
        color: #fff;
    }

    .table-bordered {
        border-color: #999;
    }

        .table-bordered > tbody > tr > td, .table-bordered > tbody > tr > th, .table-bordered > tfoot > tr > td, .table-bordered > tfoot > tr > th, .table-bordered > thead > tr > td, .table-bordered > thead > tr > th {
            border-color: #999;
        }

    .btn-icon {
        margin-right: 4px;
    }
</style>


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Danh Sách Giáo Viên
        </h1>
        @*<ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> home</a></li>
                <li><a href="#">tables</a></li>
                <li class="active">data tables</li>
            </ol>*@
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        @*<h3 class="box-title">Danh sách nhóm quyền</h3>*@
                        <button type="button" class="btn btn-warning" style="float:right ;margin-right: 10px;margin-top: 7px;">
                            <i class="btn-icon fas fa-user-plus"></i>@Html.ActionLink("Thêm Giáo Viên", "Create", "GiaoVien")
                        </button>

                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Mã GV</th>
                                        <th>Họ và Tên</th>
                                        <th>Giới Tính</th>
                                        <th>Ngày Sinh</th>
                                        <th>Địa Chỉ</th>
                                        <th>SDT</th>
                                        <th>Luong</th>
                                        <th>Dạy Môn</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.MaGV</td>
                                            <td>@item.HoTenGV</td>
                                            <td>@item.GioiTinh</td>
                                            <td>@item.NgaySinh</td>
                                            <td>@item.DiaChi</td>
                                            <td>@item.SDT</td>
                                            <td>@item.Luong</td>
                                            <td>@item.MONHOC.TenMH</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Mã GV</th>
                                        <th>Họ và Tên</th>
                                        <th>Giới Tính</th>
                                        <th>Ngày Sinh</th>
                                        <th>Địa Chỉ</th>
                                        <th>SDT</th>
                                        <th>Luong</th>
                                        <th>Dạy Môn</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

        </div>
        <!-- /.col -->
</div>
<!-- /.row -->
    </section>
</div>




