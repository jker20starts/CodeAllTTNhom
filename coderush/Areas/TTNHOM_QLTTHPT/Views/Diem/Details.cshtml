@model coderush.Areas.TTNhom_QLTTHPT.Models.DIEM

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Đánh Giá Học Lực
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Forms</a></li>
            <li class="active">General Elements</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title" style="font-weight:100">Chi Tiết Đánh Giá Học Lực</h3>
                        <div style="float:right ; display : flex;">
                            <button type="button" class="btn btn-warning">
                                @Html.ActionLink("Sửa", "Edit", new { id = Model.MaDiem })<i class="far fa-edit"></i>
                            </button>
                            <button type="button" class="btn btn-warning">
                                @Html.ActionLink("Danh sách", "Index")<i class="fas fa-list"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body">
                        <dl class="dl-horizontal">
                            <dt>
                                Học Sinh :
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.HOCSINH.HoTenHS)
                            </dd>

                            <dt>
                                Điểm TB Học Kỳ :
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.DiemTBHK)
                            </dd>

                            <dt>
                                Điểm Tổng Kết :
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.DiemTK)
                            </dd>

                            <dt>
                                Học Kỳ :
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.HocKy)
                            </dd>

                            <dt>
                                Hạnh Kiểm :
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.HanhKiem)
                            </dd>

                            <dt>
                                Năm Học :
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.NamHoc)
                            </dd>

                            <dt>
                                Học Lực :
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.HocLuc)
                            </dd>

                        </dl>
                    </div>
                </div>
                <!-- /.box -->

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
</div>

@section Styles{
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Content/adminlte/components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/adminlte/components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Content/adminlte/components/Ionicons/css/ionicons.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/Content/adminlte/components/datatables.net-bs/css/dataTables.bootstrap.min.css">
